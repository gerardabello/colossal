{
  "name": "analosizer",
  "dependencies": {
    "ractive": "latest"
  },
  "devDependencies": {
    "browserify": "latest",
    "jshint":  "latest",
    "onchange": "latest"
  },
  "scripts": {
    "build": "mkdir -p build && cp src/index.html build/analosizer.html && npm run browserify",
    "prebuild": "npm run lint",
    "lint": "jshint --verbose src/**.js",
    "browserify": "browserify src/analosizer.js --outfile build/analosizer.js --debug",
    "clean": "rm -rf build/*",
    "watch": "onchange 'src/**/*.html' 'src/**/*.js' -v -- npm run build"
  },
  "jshintConfig": {
    "browserify": true,
    "laxcomma": true
  }
}
