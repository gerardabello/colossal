{
  "name": "analosizer",
  "dependencies": {
    "ractive": "latest"
  },
  "devDependencies": {
    "browserify": "latest",
    "jshint":  "latest"
  },
  "scripts": {
    "build": "mkdir -p build && cp src/index.html build/analosizer.html && npm run browserify",
    "prebuild": "npm run lint",
    "lint": "jshint --verbose src/**.js",
    "browserify": "browserify src/analosizer.js > build/analosizer.js"
  },
  "jshintConfig": {
    "browserify": true,
    "laxcomma": true
  }
}
